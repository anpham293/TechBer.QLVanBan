@using TechBer.ChuyenDoiSo.Authorization
@using TechBer.ChuyenDoiSo.Web.Areas.App.Models.QuyTrinhDuAnAssigneds
@using TechBer.ChuyenDoiSo.Web.Areas.App.Startup
@{
    ViewBag.CurrentPageName = AppPageNames.Common.DuyetHoSo;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/DuyetHoSo/Index.js" asp-append-version="true"></script>
}

<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">


    <div class="kt-subheader kt-grid__item">
        <div class="@(await GetContainerClass())">
            <div class="kt-subheader__main">
                <h3 class="kt-subheader__title">
                    <span>@L("DuyetHoSo")</span>
                </h3>
                <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                <span class="kt-subheader__desc">
                    @L("DuyetHoSoHeaderInfo")
                </span>
            </div>
            <div class="kt-subheader__toolbar">
               
            </div>
        </div>
    </div>

    <div class="@(await GetContainerClass()) kt-grid__item kt-grid__item--fluid">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__body">
                <div class="kt-form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">
                            <div class="form-group align-items-center">
                                <div class="input-group">
                                    <input type="text" id="TextFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                    <span class="input-group-btn">
                                        <button id="GetQuyTrinhDuAnAssignedsButton" class="btn btn-primary" type="submit">
                                            <i class="flaticon-search-1"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
                        <div class="kt-separator kt-separator--border-dashed"></div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="DuAnNameFilter">@L("DuAn")</label>
                            <input type="text" class="form-control" name="duAnNameFilter" id="DuAnNameFilter">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="TrangThaiDuyetFilter">@L("TrangThaiDuyet")</label>
                            <div class="input-group">
                                <select class="form-control m-input" placeholder="@L("TatCa")" name="trangThaiDuyetFilter" id="TrangThaiDuyetFilter">
                                    <option value="">Tất cả</option>
                                    <option value="1">Đang chờ duyệt</option>
                                    <option value="2">Đã duyệt</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item">
                            <i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none">
                            <i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
                <div class="row align-items-center">
                    <table id="QuyTrinhDuAnAssignedsTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                        <thead>
                        <tr>
                            <th>@L("Actions")</th>
                            <th>@L("HoSo")</th>
                            <th>@L("NguoiChuyenPhieu")</th>
                            <th>@L("ThoiGianGui")</th>
                            <th>@L("SoLuong")</th>
                            <th>@L("TrangThai")</th>
                            <th>@L("ThoiGianDuyet")</th>
                            <th>@L("NguoiDuyetPhieu")</th>
                        </tr>
                        </thead>
                    </table>
                </div>
                
            </div>
        </div>
    </div>
</div>