
@using TechBer.ChuyenDoiSo.Web.Areas.App.Models.Common.Modals
@using TechBer.ChuyenDoiSo.Web.Areas.App.Models.VanBanDuAns
@model VanBanDuAnViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="VanBanDuAnInformationsTab">
        
        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("Name") :</h6>
                @Model.VanBanDuAn.Name
            </div>
            <div class="col-6 mb-3">
                <h6>@L("KyHieuVanBan") :</h6>
                @Model.VanBanDuAn.KyHieuVanBan
            </div>
            <div class="col-6 mb-3">
                <h6>@L("NgayBanHanh") :</h6>
                @Model.VanBanDuAn.NgayBanHanh
            </div>
            <div class="col-6 mb-3">
                <h6>@L("FileVanBan") :</h6>
                @Model.VanBanDuAn.FileVanBan
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("DuAn")) @L("Name") :</h6>
                @Model.DuAnName
            </div>
            <div class="col-6 mb-3">
                <h6>(@L("QuyTrinhDuAn")) @L("Name") :</h6>
                @Model.QuyTrinhDuAnName
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")

