@using System.Globalization
@using TechBer.ChuyenDoiSo.Web.Areas.App.Models.Common.Modals
@using TechBer.ChuyenDoiSo.Web.Areas.App.Models.QuyTrinhDuAnAssigneds
@model ChuyenDuyetHoSoModalViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("PhieuXuLyHoSo")))

<div class="modal-body">
    <div id="phieuXuLyHoSo">
        <form name="PhieuXuLyHoSoForm" role="form" novalidate class="form-validation">
            <input type="hidden" name="typeDuyetHoSo" value="@Model.TypeDuyetHoSo">
            <input type="hidden" name="vanBanDuAnId" value="@Model.VanBanDuAn.Id"> 
            <div class="row">
                <div class="col-12" style="text-align:left;font-weight: bold">BAN QUẢN LÝ DỰ ÁN ĐẦU TƯ XÂY DỰNG</div>
                <div class="col-12" style="left: 65px;">VĂN PHÒNG</div>
            </div>
            <br>
            <div class="row">
                <div class="col-12" style="text-align:center;font-weight: bold; font-size: 20px">PHIẾU XỬ LÝ HỒ SƠ</div>
                <div class="col-12" style="text-align:center;font-weight: bold">Tên dự án: @Model.DuAn.Name</div>
            </div>
            <br>
            <div>
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th style="text-align: center">STT</th>
                        <th style="text-align: center">Loại hồ sơ, tài lệu</th>
                        <th style="text-align: center">Số lượng</th>
                        <th style="text-align: center">Phương thức</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td style="text-align: center">1</td>
                        <td style="text-align: center">@Model.VanBanDuAn.Name</td>
                        <td style="text-align: center" id="SoLuongVanBan" data-value="@Model.SoLuongVanBan">@Model.SoLuongVanBan</td>
                        <td style="text-align: center">Duyệt Online</td>
                    </tr>
                </table>
            </div>
            <div class="col-12" style="text-align:center;">______________________________________________________________________</div>
            <div class="col-12" style="text-align:center;font-weight: bold;font-size: 15px">LÃNH ĐẠO XỬ LÝ HỒ SƠ</div>
            <div >
                <textarea rows="4" class="col-12" name="xuLyCuaLanhDao" id="XuLyCuaLanhDao">@Model.VanBanDuAn.XuLyCuaLanhDao</textarea>
            </div>
            <div class="col-12" style="text-align:center;">______________________________________________________________________</div>
            <div class="col-12" style="text-align:center;font-weight: bold;font-size: 15px">PHẦN GIAO NHẬN TRONG NỘI BỘ</div>
            <div class="col-12" style="text-align:center;font-weight: bold">Giao cho cán bộ kế toán</div>
            <div class="col-12" style="text-align:right;font-style: italic ">Hải Dương, @Model.NgayGuiPhieu </div>
            <br/>
            <div>
                <table>
                    <tr class="row">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th style="text-align: center" class="col-6">NGƯỜI GIAO</th>
                                <th style="text-align: center" class="col-6">NGƯỜI NHẬN</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td style="text-align: center"><input type="hidden" name="nguoiGuiId" id ="nguoiGiaoId" value="@Model.NguoiGuiId" tenNguoiGiao="@Model.TenNguoiGiao">@Model.TenNguoiGiao</td>
                                <td style="text-align: center">
                                    <div>
                                        @Html.DropDownList("keToanTiepNhanId", new SelectList(Model.ListKeToanTiepNhan, "Id", "DisplayName", Model.KeToanTiepNhanId), "")
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </tr>
                </table>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")