@using TechBer.ChuyenDoiSo.Authorization
@using TechBer.ChuyenDoiSo.Web.Areas.App.Models.DoiTuongChuyenDoiSos
@using TechBer.ChuyenDoiSo.Web.Areas.App.Startup
@model DoiTuongChuyenDoiSosViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Tenant.DoiTuongChuyenDoiSos;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/DoiTuongChuyenDoiSos/Index.js" asp-append-version="true"></script>
}
<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">


                <div class="kt-subheader kt-grid__item">
                  <div class="@(await GetContainerClass())">
                    <div class="kt-subheader__main">
                        <h3 class="kt-subheader__title">
                            <span>@L("DoiTuongChuyenDoiSos")</span>
                        </h3>
                        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                        <span class="kt-subheader__desc">
                            @L("DoiTuongChuyenDoiSosHeaderInfo")
                        </span>
                    </div>
                    <div class="kt-subheader__toolbar">
                        <div class="kt-subheader__wrapper">
                            <button id="ExportToExcelButton" class="btn btn-outline-success"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
            @if (IsGranted(AppPermissions.Pages_DoiTuongChuyenDoiSos_Create))
                            {
                                <button id="CreateNewDoiTuongChuyenDoiSoButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewDoiTuongChuyenDoiSo")</button>                
                            }
                        </div>
                    </div>
                  </div>
                </div>
            
<div class="@(await GetContainerClass()) kt-grid__item kt-grid__item--fluid">   
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__body">
            <div class="kt-form">
                <div class="row align-items-center">
                    <div class="col-xl-12">
                        <div class="form-group align-items-center">
                            <div class="input-group">
                                <input type="text" id="DoiTuongChuyenDoiSosTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetDoiTuongChuyenDoiSosButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                <div class="col-md-12">
					<div class="kt-separator kt-separator--border-dashed"></div>
				</div>

				<div class="col-md-3">
					<div class="form-group">
						<label for="NameFilterId">@L("Name")</label>
						<input type="text" class="form-control" name="nameFilter" id="NameFilterId">
					</div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="PhuLucFilter">@L("LoaiPhuLuc")</label>
                        <select class="form-control" name="PhuLucFilter" id="PhuLucFilter">
                            <option value="">All</option>
                            <option value="1">PHU_LUC_IA</option>
                            <option value="2">PHU_LUC_IIA</option>
                        </select>
                    </div>
                </div>
				<div class="col-md-3">
					<div class="form-group">
						<label for="UserNameFilterId">@L("NguoiPhuTrach")</label>
						<input type="text" class="form-control" name="userNameFilter" id="UserNameFilterId">
					</div>
                </div>
            </div>
                <div class="row mb-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            <div class="row align-items-center">
                <table id="DoiTuongChuyenDoiSosTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
                            <th>@L("Name")</th>
                            <th>@L("LoaiPhuLuc")</th>
                            <th>@L("NguoiPhuTrach")</th>
                            <th>@L("DiemTuDanhGia")</th>
                            <th>@L("DiemHoiDongThamDinh")</th>
                            <th>@L("DiemDatDuoc")</th>
                            <th>@L("TrangThai")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
  </div>
</div>