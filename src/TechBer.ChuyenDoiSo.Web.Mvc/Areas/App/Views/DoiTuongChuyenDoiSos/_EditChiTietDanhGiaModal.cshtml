
@using System.Globalization
@using TechBer.ChuyenDoiSo.Web.Areas.App.Models.Common.Modals
@using TechBer.ChuyenDoiSo.Web.Areas.App.Models.DoiTuongChuyenDoiSos
@model EditChiTietDanhGiaModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Chỉnh sửa thông tin đánh giá"))

<div class="modal-body">
    <form name="ChiTietDanhGiaForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="form-group row">
            <div class="col-lg-12 margin-bottom-10">
                <h6><i class="fa fa-arrow-circle-right" aria-hidden="true"></i> Tiêu chí @Model.SoThuTu:</h6>
                <span>@Model.Name</span>
            </div>

            <div class="col-lg-12">
                <h6><i class="fa fa-arrow-circle-right" aria-hidden="true"></i> Phương thức đánh giá:</h6>
                <span>@Html.Raw(@Model.PhuongThucDanhGia) </span>
            </div>

            <div class="col-lg-12">
                <h6><i class="fa fa-arrow-circle-right" aria-hidden="true"></i> Điểm tối đa: @Html.Raw(@Model.DiemToiDa)</h6>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-lg-12">
                <label for="ChiTietDanhGia_DiemTuDanhGia">@L("DiemTuDanhGia")</label>
                <input class="form-control m-input" id="ChiTietDanhGia_DiemTuDanhGia" value="@Model.DiemTuDanhGia?.ToString(CultureInfo.InvariantCulture)" type="number" name="diemTuDanhGia" />
            </div>
        </div>

    @*<div class="form-group">
        <label for="ChiTietDanhGia_DiemHoiDongThamDinh">@L("DiemHoiDongThamDinh")</label>
        <input class="form-control m-input" id="ChiTietDanhGia_DiemHoiDongThamDinh" value="@Model.DiemHoiDongThamDinh" type="number" name="diemHoiDongThamDinh" />
    </div>

    <div class="form-group">
        <label for="ChiTietDanhGia_DiemDatDuoc">@L("DiemDatDuoc")</label>
        <input class="form-control m-input" id="ChiTietDanhGia_DiemDatDuoc" value="@Model.DiemDatDuoc" type="number" name="diemDatDuoc" />
    </div>*@

        <div class="form-group">
            <label for="ChiTietDanhGia_Description">@L("Description")</label>
            <textarea class="form-control" id="ChiTietDanhGia_Description" name="description" rows="6">@Model.Description</textarea>
        </div>

        <div class="form-group">
            <label for="ChiTietDanhGia_SoLieuKeKhai">@L("SoLieuKeKhai")</label>
            <input class="form-control" id="ChiTietDanhGia_SoLieuKeKhai" value="@Model.SoLieuKeKhai" type="text" name="soLieuKeKhai" />
        </div>
    </form>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
