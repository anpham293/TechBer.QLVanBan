@using System.Globalization
@using TechBer.ChuyenDoiSo.Common
@using TechBer.ChuyenDoiSo.Web.Areas.App.Models.Common.Modals
@using TechBer.ChuyenDoiSo.Web.Areas.App.Models.DuAns
@model CreateOrEditDuAnModalViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditDuAn")) : L("CreateNewDuAn")))

<div class="modal-body">
    <div id="DuAnInformationsTab">
        <form name="DuAnInformationsForm" role="form" novalidate class="form-validation">

            @if (Model.IsEditMode)
            {
                <input type="hidden" name="id" value="@Model.DuAn.Id"/>
            }
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label for="DuAn_Descriptions">
                            @L("MaDuAn")<i style="color:red">(*)</i>
                        </label>
                        <input class="form-control" id="DuAn_Descriptions" value="@Model.DuAn.Descriptions" type="text" name="descriptions"/>
                    </div>
                </div>
                <div class="col-8">
                    <div class="form-group">
                        <label for="DuAn_Name">
                            @L("TenDuAn")<i style="color:red">(*)</i>
                        </label>
                        <input class="form-control" id="DuAn_Name" value="@Model.DuAn.Name" type="text" name="name" required/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label for="DuAn_MaDVQHNS">@L("MaDVQHNS")</label>
                        <input class="form-control" id="DuAn_MaDVQHNS" value="@Model.DuAn.MaDVQHNS" type="text" name="maDVQHNS"/>
                    </div>
                </div>
                <div class="col-8">
                    <div class="form-group m-form__group">
                        <label for="LoaiDuAnName">
                            @L("LoaiDuAn")<i style="color:red">(*)</i>
                        </label>
                        <div class="input-group">
                            <input class="form-control" id="LoaiDuAnName" name="loaiDuAnName" value="@Model.LoaiDuAnName" type="text" disabled>
                            <div class="input-group-append">
                                <button class="btn btn-primary blue" id="OpenLoaiDuAnLookupTableButton" type="button">
                                    <i class="fa fa-search"></i> @L("Pick")</button>
                            </div>
                            <div class="input-group-prepend">
                                <button class="btn btn-danger btn-icon" type="button" id="ClearLoaiDuAnNameButton">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    @if (Model.IsEditMode)
                    {
                        <input class="form-control" id="DuAn_LoaiDuAnId" value="@Model.DuAn.LoaiDuAnId" type="text" name="loaiDuAnId" hidden/>
                    }
                    else
                    {
                        <input class="form-control" id="DuAn_LoaiDuAnId" value="" type="text" name="loaiDuAnId" hidden/>
                    }

                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label for="DuAn_NgayBatDau">@L("NgayBatDau")</label>
                        <input class="form-control m-input date-picker" id="DuAn_NgayBatDau" type="text" name="ngayBatDau" value="@Model.DuAn.NgayBatDau"/>
                    </div>
                </div>
                <div class="col-8">
                    <div class="form-group m-form__group">
                        <label for="ChuongName">@L("Chuongs")</label>
                        <div class="input-group">
                            <input class="form-control" id="ChuongName" name="chuongName" value="@Model.ChuongName" type="text" disabled>
                            <div class="input-group-append">
                                <button class="btn btn-primary blue" id="OpenChuongLookupTableButton" type="button">
                                    <i class="fa fa-search"></i> @L("Pick")</button>
                            </div>
                            <div class="input-group-prepend">
                                <button class="btn btn-danger btn-icon" type="button" id="ClearChuongNameButton">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    @if (Model.IsEditMode)
                    {
                        <input class="form-control" id="DuAn_ChuongId" value="@Model.DuAn.ChuongId" type="text" name="chuongId" hidden/>
                    }
                    else
                    {
                        <input class="form-control" id="DuAn_ChuongId" value="" type="text" name="chuongId" hidden/>
                    }

                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label for="DuAn_NgayKetThuc">@L("NgayKetThuc")</label>
                        <input class="form-control m-input date-picker" id="DuAn_NgayKetThuc" type="text" name="ngayKetThuc" value="@Model.DuAn.NgayKetThuc"/>
                    </div>
                </div>
                <div class="col-8">
                    <div class="form-group m-form__group">
                        <label for="LoaiKhoanName">@L("LoaiKhoans")</label>
                        <div class="input-group">
                            <input class="form-control" id="LoaiKhoanName" name="loaiKhoanName" value="@Model.LoaiKhoanName" type="text" disabled>
                            <div class="input-group-append">
                                <button class="btn btn-primary blue" id="OpenLoaiKhoanLookupTableButton" type="button">
                                    <i class="fa fa-search"></i> @L("Pick")</button>
                            </div>
                            <div class="input-group-prepend">
                                <button class="btn btn-danger btn-icon" type="button" id="ClearLoaiKhoanNameButton">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    @if (Model.IsEditMode)
                    {
                        <input class="form-control" id="DuAn_LoaiKhoanId" value="@Model.DuAn.LoaiKhoanId" type="text" name="loaiKhoanId" hidden/>
                    }
                    else
                    {
                        <input class="form-control" id="DuAn_LoaiKhoanId" value="" type="text" name="loaiKhoanId" hidden/>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label for="DuAn_TongMucDauTu">@L("TongMucDauTu")</label>
                        <input class="form-control" id="DuAn_TongMucDauTu" value="@Model.DuAn.TongMucDauTu.ToString(CultureInfo.InvariantCulture)" type="text" name="tongMucDauTu" required data-inputmask="'alias': 'decimal', 'groupSeparator': '.', 'autoGroup': true, 'digits': 0, 'digitsOptional': false, 'suffix': ' VNĐ', 'placeholder': '0'"/>
                    </div>
                </div>
                <div class="col-8">
                    <div class="form-group">
                        <label for="DuAn_TongMucDauTuBangChu">Bằng chữ</label>
                        <input style="font-style: italic" class="form-control" id="DuAn_TongMucDauTuBangChu" value="@Helper.DocTienBangChu((long) Model.DuAn.TongMucDauTu, " đồng.")" disabled/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label for="DuAn_DuToan">@L("DuToan")</label>
                        <input class="form-control" id="DuAn_DuToan" value="@Model.DuAn.DuToan.ToString(CultureInfo.InvariantCulture)" type="text" name="duToan" required data-inputmask="'alias': 'decimal', 'groupSeparator': '.', 'autoGroup': true, 'digits': 0, 'digitsOptional': false, 'suffix': ' VNĐ', 'placeholder': '0'"/>
                    </div>
                </div>
                <div class="col-8">
                    <div class="form-group">
                        <label for="DuAn_DuToanBangChu">Bằng chữ</label>
                        <input style="font-style: italic" class="form-control" id="DuAn_DuToanBangChu" value="@Helper.DocTienBangChu((long) Model.DuAn.DuToan, " đồng.")" disabled/>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")