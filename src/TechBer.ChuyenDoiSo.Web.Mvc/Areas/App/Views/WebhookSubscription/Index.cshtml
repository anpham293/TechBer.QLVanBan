@using TechBer.ChuyenDoiSo.Authorization
@using TechBer.ChuyenDoiSo.Web.Areas.App.Startup
@{
    ViewBag.CurrentPageName = AppPageNames.Common.WebhookSubscriptions;
}
@section Styles
{
    <link rel="stylesheet" abp-href="/view-resources/Areas/App/Views/WebhookSubscriptions/Index.css" asp-append-version="true" />
}

@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/_Bundles/webhook-subscription-list.js" asp-append-version="true"></script>
}

<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">
    <div class="kt-subheader kt-grid__item">
        <div class="@(await GetContainerClass())">
            <div class="kt-subheader__main">
                <h3 class="kt-subheader__title">
                    <span>@L("WebhookSubscriptions")</span>
                </h3>
                <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                <span class="kt-subheader__desc">
                    @L("WebhookSubscriptionsInfo")
                </span>
            </div>
            <div class="kt-subheader__toolbar">
                <div class="kt-subheader__wrapper">
                    @if (IsGranted(AppPermissions.Pages_Administration_WebhookSubscription_Create))
                    {
                        <button id="CreateNewWebhookSubscription" class="btn btn-primary"><i class="fa fa-plus"></i> @L("AddNewWebhookSubscription")</button>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="@(await GetContainerClass()) kt-grid__item kt-grid__item--fluid">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__body">
                <div class="align-items-center">
                    <table id="SubscriptionTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th></th>
                                <th>@L("WebhookEndpoint")</th>
                                <th>@L("WebhookEvents")</th>
                                <th>@L("IsActive")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>