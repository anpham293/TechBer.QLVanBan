@model TechBer.ChuyenDoiSo.Web.Areas.App.Models.Layout.ActiveUserDelegationsComboboxViewModel
@{
    Layout = null;
}
@if (Model.UserDelegationConfiguration.IsEnabled && Model.UserDelegations.Count > 0)
{
    <div class="kt-header__topbar-item dropdown active-user-delegations">
        <div class="kt-header__topbar-wrapper">
            <span class="kt-header__topbar-icon kt-header__topbar-icon--brand">
                <select id="ActiveUserDelegationsCombobox" class="form-control form-control-sm" data-value="0">
                    <option value="0">@L("SwitchToUser")</option>
                    @foreach (var userDelegation in Model.UserDelegations)
                    {
                        <option value="@userDelegation.Id" data-username="@userDelegation.Username">@userDelegation.Username (@L("ExpiresAt",userDelegation.EndTime))</option>
                    }
                </select>
            </span>
        </div>
    </div>
}
