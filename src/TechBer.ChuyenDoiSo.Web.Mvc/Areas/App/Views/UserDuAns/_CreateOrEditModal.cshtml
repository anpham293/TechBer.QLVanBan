
@using System.Globalization
@using TechBer.ChuyenDoiSo.Web.Areas.App.Models.Common.Modals
@using TechBer.ChuyenDoiSo.Web.Areas.App.Models.UserDuAns
@model CreateOrEditUserDuAnModalViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditUserDuAn")) : L("CreateNewUserDuAn")))

<div class="modal-body">
        <div id="UserDuAnInformationsTab">
            <form name="UserDuAnInformationsForm" role="form" novalidate class="form-validation">

                @if (Model.IsEditMode)
                {
                    <input type="hidden" name="id" value="@Model.UserDuAn.Id" />
                }

				            
								<div class="form-group m-form__group">
										<label for="UserName">@L("User")</label>
									    <div class="input-group">
											<input class="form-control" id="UserName" name="userName" value="@Model.UserName" type="text" disabled>
										<div class="input-group-append">
											<button class="btn btn-primary blue" id="OpenUserLookupTableButton" type="button"><i class="fa fa-search"></i> @L("Pick")</button>
										</div> 
										<div class="input-group-prepend">
											<button class="btn btn-danger btn-icon" type="button" id="ClearUserNameButton"><i class="fa fa-times"></i></button>
										</div>
									</div>
								</div>

								@if (Model.IsEditMode)
								{
									<input class="form-control" id="UserDuAn_UserId" value="@Model.UserDuAn.UserId" type="text" name="userId"  hidden/>
								}
								 else
								{ 
									<input class="form-control" id="UserDuAn_UserId" value="" type="text" name="userId"  hidden/>
								}

            
								<div class="form-group m-form__group">
										<label for="DuAnName">@L("DuAn")</label>
									    <div class="input-group">
											<input class="form-control" id="DuAnName" name="duAnName" value="@Model.DuAnName" type="text" disabled>
										<div class="input-group-append">
											<button class="btn btn-primary blue" id="OpenDuAnLookupTableButton" type="button"><i class="fa fa-search"></i> @L("Pick")</button>
										</div> 
										<div class="input-group-prepend">
											<button class="btn btn-danger btn-icon" type="button" id="ClearDuAnNameButton"><i class="fa fa-times"></i></button>
										</div>
									</div>
								</div>

								@if (Model.IsEditMode)
								{
									<input class="form-control" id="UserDuAn_DuAnId" value="@Model.UserDuAn.DuAnId" type="text" name="duAnId"  hidden/>
								}
								 else
								{ 
									<input class="form-control" id="UserDuAn_DuAnId" value="" type="text" name="duAnId"  hidden/>
								}



				
								<div class="form-group">
									<label for="UserDuAn_TrangThai">@L("TrangThai")</label>
									<input class="form-control m-input" id="UserDuAn_TrangThai" value="@Model.UserDuAn.TrangThai.ToString(CultureInfo.InvariantCulture)" type="number" name="trangThai"  />
								</div>
					

            </form>
        </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
