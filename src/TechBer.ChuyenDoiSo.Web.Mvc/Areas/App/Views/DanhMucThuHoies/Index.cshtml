@using TechBer.ChuyenDoiSo.Authorization
@using TechBer.ChuyenDoiSo.Web.Areas.App.Models.DanhMucThuHoies
@using TechBer.ChuyenDoiSo.Web.Areas.App.Startup
@model DanhMucThuHoiesViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Host.DanhMucThuHoies;
}

@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/DanhMucThuHoies/Index.js" asp-append-version="true"></script>
}

<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">


    <div class="kt-subheader kt-grid__item">
        <div class="@(await GetContainerClass())">
            <div class="kt-subheader__main">
                <h3 class="kt-subheader__title">
                    <span>@L("DanhMucThuHoies")</span>
                </h3>
                <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                <span class="kt-subheader__desc">
                    @L("DanhMucThuHoiesHeaderInfo")
                </span>
            </div>
            <div class="kt-subheader__toolbar">
                <div class="kt-subheader__wrapper">
                    <button id="ExportToExcelButton" class="btn btn-outline-success">
                        <i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
                    @if (IsGranted(AppPermissions.Pages_DanhMucThuHoies_Create))
                    {
                        <button id="CreateNewDanhMucThuHoiButton" class="btn btn-primary blue">
                            <i class="fa fa-plus"></i> @L("CreateNewDanhMucThuHoi")</button>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="@(await GetContainerClass()) kt-grid__item kt-grid__item--fluid">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__body">
                <div class="kt-form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">
                            <div class="form-group align-items-center">
                                <div class="input-group">
                                    <input type="text" id="DanhMucThuHoiesTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                    <span class="input-group-btn">
                                        <button id="GetDanhMucThuHoiesButton" class="btn btn-primary" type="submit">
                                            <i class="flaticon-search-1"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
                        <div class="kt-separator kt-separator--border-dashed"></div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="SttFilterId">@L("Stt")</label>
                            <input type="text" class="form-control" name="sttFilter" id="SttFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="TenFilterId">@L("Ten")</label>
                            <input type="text" class="form-control" name="tenFilter" id="TenFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="GhiChuFilterId">@L("GhiChu")</label>
                            <input type="text" class="form-control" name="ghiChuFilter" id="GhiChuFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="MinTypeFilterId">@L("MinMax") @L("Type")</label>
                            <div class="input-group">
                                <input type="number" class="form-control m-input" placeholder="@L("MinValue")" name="minTypeFilter" id="MinTypeFilterId"/>
                                <input type="number" class="form-control m-input" placeholder="@L("MaxValue")" name="maxTypeFilter" id="MaxTypeFilterId"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="DuAnThuHoiMaDATHFilterId">(@L("DuAnThuHoi")) @L("MaDATH")</label>
                            <input type="text" class="form-control" name="duAnThuHoiMaDATHFilter" id="DuAnThuHoiMaDATHFilterId">
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item">
                            <i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none">
                            <i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
                <div class="row align-items-center">
                    <table id="DanhMucThuHoiesTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                        <thead>
                        <tr>
                            <th>@L("Actions")</th>
                            <th>@L("Stt")</th>
                            <th>@L("Ten")</th>
                            <th>@L("GhiChu")</th>
                            <th>@L("Type")</th>
                            <th>@L("DuAnThuHoiMaDATH")</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>